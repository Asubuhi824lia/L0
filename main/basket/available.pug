-
    var cards = [
        {
            img: "/img/product1_preview.png", size: '56',
            cost:"522", cy:"сом", prev_cost:"1051 сом", quantity: 1,
            name:"Футболка UZcotton мужская", 
            app:"Цвет: белый", warehouse:"Коледино WB", left: '2'
        },
        {
            img: "/img/product2_preview.png", size: '',
            cost:"2 100 047", cy:"сом", prev_cost:"2 300 047 сом", quantity: 200,
            name:"Силиконовый чехол картхолдер (отверстия) для...", 
            app:"Цвет: прозрачный", warehouse:"Коледино WB", left: '10'
        },
        {
            img: "/img/product3_preview.png", size: '',
            cost:"494", cy:"сом", prev_cost:"950 сом", quantity: 2,
            name:'Карандаши цветные Faber-Castell "Замок", набор 24 цв...', 
            app:"", warehouse:"Коледино WB", left: '2'
        }
    ]


block available
    .available-header
        +checkbox
        span.text_font Выбрать все
        a.list-visibility
            +image("/icons/basket/to_collapse.svg", "16px", "9.6px")
    section.available__products-list
        each card in cards
            .available__card
                .available__card-header
                    .available__card-left
                        +image(card.img, "80px", "106px")
                        +checkbox
                            +size(card.size)
                    .available__card-right
                        .available__card-main
                            .available__card-cost
                                span(class="subtitle-accent_font")= card.cost
                                h4(class="subtitle-accent_font" style="margin-left: 5px;")= card.cy
                                span.available__prev-cost(class="caption_font color_gray")= card.prev_cost
                            p(class="card-description_font")= card.name
                        p(class="caption_font")= card.app
                        p(class="caption_font color_gray")= card.warehouse
                .available__card-footer
                    .amount
                        +counter(card.quantity)
                        .available__card-amount
                            if card.left < 5
                                span.caption_font.color_red= 'Осталось '+card.left+' шт.'
                    +actions